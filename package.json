{
    "name": "vscode-docker-syntax",
    "displayName": "vscode-docker-syntax",
    "description": "Syntax highlighting for Dockerfiles.",
    "version": "0.1.5",
    "publisher": "dunstontc",
    "repository": {
      "type": "git",
      "url": "https://github.com/dunstontc/vscode-docker-syntax.git"
    },
    "engines": {"vscode": "^1.21.0"},
    "categories": ["Programming Languages"],
    "galleryBanner": {
      "color": "#1e1e1e",
      "theme": "dark"
    },
    "icon": "assets/icon.png",
    "contributes": {
        "languages": [
            {
                "id": "Dockerfile",
                "aliases": [
                    "dockerfile",
                    "dockerfile"
                ],
                "extensions": ["Dockerfile"],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "Dockerfile",
                "scopeName": "source.dockerfile",
                "path": "./syntaxes/dockerfile.tmLanguage.json"
            }
        ]
    }
}
